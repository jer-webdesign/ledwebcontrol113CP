{
  "name": "frontend",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "prebuild": "mkdirp dist dist/js dist/css dist/assets/fonts dist/assets/icons dist/assets/images",
    "build-css": "npx tailwindcss -i ./src/css/tailwind-input.css -o ./src/css/main.css --config ./tailwind.config.js --verbose",
    "watch-css": "npx tailwindcss -i ./src/css/tailwind-input.css -o ./src/css/main.css --watch --config ./tailwind.config.js",
    "build:css": "npx tailwindcss -i ./src/css/tailwind-input.css -o ./dist/css/main.css --config ./tailwind.config.js",
    "build:copy": "copyfiles src/pages/index.html dist/ && copyfiles -u 2 src/js/*.js dist/js/ && copyfiles -u 2 src/assets/**/* dist/assets/",
    "build": "npm run clean && npm run prebuild && npm run build:css && npm run build:copy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "mkdirp": "^1.0.4",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.0"
  }
}
